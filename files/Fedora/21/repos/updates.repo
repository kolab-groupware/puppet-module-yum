# Managed with puppet
[updates]
name = Fedora 21 - $basearch - Updates
baseurl = http://download.fedoraproject.org/pub/fedora/linux/updates/21/$basearch/
mirrorlist = http://mirrors.fedoraproject.org/mirrorlist?repo=updates-released-f21&arch=$basearch
enabled = 1
gpgcheck = 1
gpgkey = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-updates

[updates-debuginfo]
name = Fedora - $basearch - Updates - Debug
baseurl = http://download.fedoraproject.org/pub/fedora/linux/updates/21/$basearch/debug/
mirrorlist = http://mirrors.fedoraproject.org/mirrorlist?repo=updates-released-debug-f21&arch=$basearch
enabled = 0
gpgcheck = 1
gpgkey = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-updates

[updates-source]
name = Fedora - Updates Source
baseurl = http://download.fedoraproject.org/pub/fedora/linux/updates/21/SRPMS/
mirrorlist = http://mirrors.fedoraproject.org/mirrorlist?repo=updates-released-source-f21&arch=$basearch
enabled = 0
gpgcheck = 1
gpgkey = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-updates
